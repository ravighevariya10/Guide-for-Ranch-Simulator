<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuideOptions"
    android:orientation="vertical"
    android:background="@color/Background1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/Background2"
        android:id="@+id/title_card_guide"
        android:elevation="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Background2"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginLeft="-5dp"
                android:src="@drawable/logo"
                android:layout_marginTop="10dp"
                app:civ_border_color="@color/White"
                app:civ_border_width="2dp"
                android:id="@+id/logo_image_guide"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/logo_text_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Ranch Simulator Guide for "
                    android:textColor="@color/White"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/os_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/White"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:text="Android"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/Background2"
        app:cardCornerRadius="10dp"
        android:layout_margin="20dp"
        android:id="@+id/options_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/install"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_btn_options"
                android:drawableLeft="@drawable/install_black"
                android:elevation="30dp"
                android:paddingLeft="20dp"
                android:paddingRight="40dp"
                android:text="How To Install"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/play"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_btn_options"
                android:drawableLeft="@drawable/play_black"
                android:elevation="30dp"
                android:paddingLeft="20dp"
                android:paddingRight="40dp"
                android:text="How To Play"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_btn_options"
                android:drawableLeft="@drawable/about_black"
                android:elevation="30dp"
                android:paddingLeft="20dp"
                android:paddingRight="40dp"
                android:text="About Game"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/idea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_btn_options"
                android:drawableLeft="@drawable/idea"
                android:elevation="30dp"
                android:paddingLeft="20dp"
                android:paddingRight="40dp"
                android:text="Tips and Tricks"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_btn_options"
                android:drawableLeft="@drawable/star_black"
                android:elevation="30dp"
                android:paddingLeft="20dp"
                android:paddingRight="40dp"
                android:text="How To Get 5 Stars"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/strategy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_btn_options"
                android:drawableLeft="@drawable/strategy_black"
                android:elevation="30dp"
                android:paddingLeft="20dp"
                android:paddingRight="25dp"
                android:text="General Strategies and Plays"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_btn_options"
                android:drawableLeft="@drawable/privacy_black"
                android:elevation="30dp"
                android:paddingLeft="20dp"
                android:paddingRight="40dp"
                android:text="Privacy and Policy"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>